<div>
  <h2><%= @post.rationale %></h2>
</div>
<div class="well">
  <div>
    <span><h3>Overtime Amount Requested: <%= @post.overtime_request %></h3></span>
  </div>
  <div>
    <span><h3>Employee: <%= @post.user.full_name %></h3></span>
  </div>
  <div>
    <span><h3>Date: <%= @post.date %></h3></span>
  </div>
  <div>
    <span><h3>Current Stage of Approval: <%= @post.status %></h3></span>
  </div>
</div>

<%= link_to '', edit_post_path(@post), class: "btn btn-primary glyphicon glyphicon-pencil action-icons" if policy(@post).update? %>
<%= link_to '', post_path(@post), method: :delete, id: "delete_post_#{@post.id}_from_index", data: { confirm: "Are you sure?", remote: true }, class: 'btn btn-primary glyphicon glyphicon-trash action-icons' %>
