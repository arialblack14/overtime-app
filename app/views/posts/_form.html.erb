<%= form_for @post, class: "form-horizontal" do |f| %>
  <% if @post.errors.any? %>
    <%= @post.errors.full_messages.each do |error| %>
      <%= js add_gritter(error, title: "Overtime App Notification", sticky: false, image: :error, time: 3000) %>
    <% end %>
  <% end %>

  <div class="form-post">
    <%= f.label :date, class: "col-sm-2 control-label" %>
    <%= f.date_field :date, class: "form-control" %>
  </div>
  <div class="form-post">
    <%= f.label :rationale, class: "col-sm-2 control-label" %>
    <%= f.text_area :rationale, class: "form-control" %>
  </div>
  <div class="form-post">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Save", class: "btn btn-primary pull-right" %>
    </div>
  </div>
<% end %>
